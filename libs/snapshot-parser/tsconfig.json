{
  "compilerOptions": {
    "target": "es2021",
    "module": "node16",
    "moduleResolution": "node16",
    "allowJs": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "strict": true,
    "strictNullChecks": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["ES2021"],
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "composite": true
  },
  "references": [{ "path": "../database" }]
}
